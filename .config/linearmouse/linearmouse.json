{
  "$schema" : "https:\/\/schema.linearmouse.app\/0.10.0",
  "schemes" : [
    {
      "if" : {
        "device" : {
          "category" : "mouse"
        }
      },
      "buttons" : {
        "universalBackForward" : true
      },
      "pointer" : {
        "acceleration" : 1,
        "disableAcceleration" : true
      },
      "scrolling" : {
        "acceleration" : {
          "vertical" : 1
        },
        "speed" : {
          "vertical" : 0
        },
        "distance" : {
          "vertical" : "128px"
        }
      }
    }
  ]
}
